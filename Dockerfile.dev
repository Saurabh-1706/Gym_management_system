# Use Node.js 20 (compatible with Next.js 15 and React 19)
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the entire project
COPY . .

# Expose Next.js dev port
EXPOSE 3000

# Run in development mode
CMD ["npm", "run", "dev"]
